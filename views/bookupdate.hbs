<!DOCTYPE html>
<html>
<body>
    <form action="{{#if data._id}}/book/particularbookupdate{{else}}/book/newbookadd{{/if}}" method="post">
        <fieldset>
            <legend>Book Details</legend>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="{{data.title}}" required />
            </div>
            <div class="form-control">
                <label for="author">Author</label>
                <input type="text" id="author" name="author" value="{{data.author}}" required />
            </div>
            <div class="form-control">
                <label for="summary">Summary</label>
                <textarea id="summary" name="summary" cols="30" rows="10" required>{{data.summary}}</textarea>
            </div>
            <input type="hidden" id="book_id" name="book_id" value="{{data._id}}"/>
            <input type="submit" value="submit" class="submit-btn" />
        </fieldset>
    </form>

</body>
</html>
